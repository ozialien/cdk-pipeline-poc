{
  "version": 2,
  "rules": [
    {
      "description": "Always sample requests to /products",
      "service_name": "*",
      "host": "*",
      "http_method": "GET",
      "url_path": "/products",
      "fixed_target": 1,
      "rate": 1.0
    },
    {
      "description": "Always sample requests to /products/{id}",
      "service_name": "*",
      "host": "*",
      "http_method": "GET",
      "url_path": "/products/*",
      "fixed_target": 1,
      "rate": 1.0
    }
  ],
  "default": {
    "fixed_target": 1,
    "rate": 0.05
  }
}
