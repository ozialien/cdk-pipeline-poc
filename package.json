{
  "name": "cdk-pipiline-poc",
  "version": "0.1.0",
  "bin": {
    "cdk-pipiline-poc": "bin/cdk-pipiline-poc.js"
  },
  "scripts": {
    "mvn:install": "mvn -f ./product-catalog-sb-api clean install -DskipTests=true",
    "cdk:integrate:github": "cdk deploy CdkSetupCodeStarParameterStack",
    "cdk:synth": "cdk synth",    
    "cdk:deploy": "npm run mvn:install && cdk deploy CdkPipilinePocStack",
    "codegen:help": "openapi-generator-cli help generate",
    "codegen:lambda:server": "openapi-generator-cli generate -i oas/product.json -g spring -o codegen/server",
    "codegen:jest:tests": "ts-node ./generate-tests.ts",
    "codegen:postman:tests": "openapi-generator-cli generate -i oas/product.json -g postman-collection -o postman"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.15.0",
    "@stoplight/spectral": "^6.5.0",
    "@stoplight/spectral-owasp-ruleset": "^2.0.1",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.7",
    "ajv": "^8.17.1",
    "aws-cdk": "2.142.1",
    "chai": "^5.1.2",
    "fs": "^0.0.1-security",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "path": "^0.12.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "dependencies": {
    "aws-cdk-lib": "2.142.1",
    "constructs": "^10.0.0"
  },
  "cdk": {
    "app": "npx ts-node bin/cdk-pipiline-poc.ts"
  }

}
