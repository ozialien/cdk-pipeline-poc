{
  "name": "cdk-pipiline-poc",
  "version": "0.1.0",
  "bin": {
    "cdk-pipiline-poc": "bin/cdk-pipiline-poc.js"
  },
  "scripts": {
    "java:version:21": "sdk install java 21.0.2-open && sdk default java 21.0.2-open",
    "mvn:clean": "mvn -f ./product-catalog-sb-api clean -DskipTests=true",
    "mvn:install": "mvn -f ./product-catalog-sb-api clean install -DskipTests=true",
    "cdk:integrate:github": "cdk deploy CdkSetupCodeStarParameterStack",
    "cdk:synth": "cdk synth",
    "cdk:setup:cognito": "cdk deploy InitializeCognitoOAuth2Stack",
    "cdk:teardown:cognito": "cdk destroy InitializeCognitoOAuth2Stack",
    "cdk:deploy": "cdk deploy CdkPipilinePocStack",
    "e2e:all": "npm install && npm run spectral:lint && npm run mvn:install && npm run cdk:deploy",
    "e2e:clean": "npm ci && npm run mvn:clean",
    "spectral:lint": "spectral lint oas/product.json",
    "codegen:help": "openapi-generator-cli help generate",
    "codegen:lambda:server:beta": "openapi-generator-cli generate -i oas/product.json -g spring -o codegen/server",
    "codegen:jest:tests:beta": "ts-node ./generate-tests.ts",
    "codegen:postman:tests": "openapi-generator-cli generate -i oas/product.json -g postman-collection -o postman"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.15.0",
    "@stoplight/spectral": "^6.5.0",
    "@stoplight/spectral-owasp-ruleset": "^2.0.1",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.7",
    "ajv": "^8.17.1",
    "aws-cdk": "2.164.1",
    "aws-cdk-lib": "^2.164.1",
    "chai": "^5.1.2",
    "constructs": "^10.4.2",
    "fs": "^0.0.1-security",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "path": "^0.12.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "cdk": {
    "app": "npx ts-node bin/cdk-pipiline-poc.ts"
  }
}
